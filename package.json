  },
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.45",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.0",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "tslint": "^5.8.0"
  },
  "license": "MIT"
